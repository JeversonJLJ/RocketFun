<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_empty="true">
        <layer-list>
            <item
                android:left="3dp"
                android:right="3dp"
                android:top="25dp"
                android:bottom="25dp"
                android:drawable="@android:drawable/arrow_down_float">
            </item>
        </layer-list>
    </item>

    <item android:state_expanded="true">
        <layer-list>
            <item
                android:left="3dp"
                android:right="3dp"
                android:top="25dp"
                android:bottom="25dp"
                android:drawable="@android:drawable/arrow_up_float">
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item
                android:left="3dp"
                android:right="3dp"
                android:top="25dp"
                android:bottom="25dp"
                android:drawable="@android:drawable/arrow_up_float">
            </item>
        </layer-list>
    </item>

</selector>