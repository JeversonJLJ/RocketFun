<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>

    </style>



    <style name="PreferencesTheme" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <style name="PreferenceScreenStyle" >
        <item name="android:background">@color/colorPrimary</item>

    </style>
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/orange</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <!-- Used for the background -->
        <item name="android:background">@color/colorPrimary</item>
    </style>



    <style name="TextView" parent="AppTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TabItem" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">8sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/darkGrey</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>
</resources>
